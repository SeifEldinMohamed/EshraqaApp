<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SebhaFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_counter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_20sdp"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="@color/white"
                android:textSize="@dimen/_38ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/btn_sebha"
                app:layout_constraintEnd_toEndOf="@+id/btn_sebha"
                app:layout_constraintStart_toStartOf="@+id/btn_sebha"
                app:layout_constraintTop_toTopOf="@+id/btn_sebha"
                tools:ignore="TextContrastCheck" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:contentDescription="@string/tsbeh_background_image_description"
                android:src="@drawable/sebha_counter_stroke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_seha_message"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="ImageContrastCheck" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_sebha"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_8sdp"
                android:backgroundTint="@color/green"
                android:clickable="true"
                android:contentDescription="@string/stroke_image_description"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                app:layout_constraintEnd_toEndOf="@+id/imageView9"
                app:layout_constraintHorizontal_bias="0.45"
                app:layout_constraintStart_toStartOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView9"
                app:layout_constraintVertical_bias="0.45"
                tools:ignore="ImageContrastCheck" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_seha_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_28sdp"
                android:backgroundTint="@color/green"
                android:clickable="true"
                android:contentDescription="@string/pen_image_description"
                android:focusable="true"
                android:src="@drawable/ic_pen"
                android:theme="@style/FloatingButton"
                app:layout_constraintEnd_toStartOf="@+id/btn_reset"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toEndOf="@+id/btn_sound"
                app:layout_constraintTop_toBottomOf="@+id/imageView7"
                tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_28sdp"
                android:backgroundTint="@color/green"
                android:clickable="true"
                android:contentDescription="@string/sound_image_description"
                android:focusable="true"
                android:src="@drawable/ic_sound"
                android:theme="@style/FloatingButton"
                app:layout_constraintStart_toStartOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/imageView7"
                tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_28sdp"
                android:backgroundTint="@color/green"
                android:clickable="true"
                android:contentDescription="@string/reset_image_description"
                android:focusable="true"
                android:src="@drawable/ic_reset"
                android:theme="@style/FloatingButton"
                app:layout_constraintEnd_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/imageView7"
                tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:contentDescription="@string/tsbeh_message_background_image_description"
                android:src="@drawable/sebha_message_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/txt_sebha_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="@string/tsbeh8"
                android:textColor="@color/white"
                android:textSize="@dimen/_22ssp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                app:layout_constraintEnd_toEndOf="@+id/imageView7"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/imageView8"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="TextContrastCheck" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/floral_design_image_description"
                android:src="@drawable/ic_floral_design"
                app:layout_constraintEnd_toEndOf="@+id/imageView7"
                app:layout_constraintStart_toStartOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="@+id/imageView7"
                tools:ignore="ImageContrastCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>