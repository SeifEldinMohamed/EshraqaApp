<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttom_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_290sdp"
        android:background="@drawable/bottomsheet_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_revise_counters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="@string/enter_number_of_days_revision"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_read_counters" />

        <Spinner
            android:id="@+id/spinner_revision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_18sdp"
            android:backgroundTint="#FFFFFF"
            android:entries="@array/numbersOfDays"
            android:padding="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_revise_counters"
            app:layout_constraintEnd_toStartOf="@+id/txt_revise_counters"
            app:layout_constraintTop_toTopOf="@+id/txt_revise_counters"
            tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

        <Spinner
            android:id="@+id/spinner_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_31sdp"
            android:backgroundTint="#FFFFFF"
            android:entries="@array/numbersOfDays"
            android:padding="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_save_counters"
            app:layout_constraintEnd_toStartOf="@+id/txt_save_counters"
            app:layout_constraintTop_toTopOf="@+id/txt_save_counters"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/txt_save_counters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:text="@string/enter_number_of_days_save"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_30sdp"
            android:backgroundTint="#FFFFFF"
            android:entries="@array/numbersOfDays"
            android:padding="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_read_counters"
            app:layout_constraintEnd_toStartOf="@+id/txt_read_counters"
            app:layout_constraintTop_toTopOf="@+id/txt_read_counters"
            tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/txt_read_counters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="@string/enter_number_of_days_read"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_save_counters" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_counters"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:padding="@dimen/_8sdp"
            android:text="@string/follow"
            android:textColor="@color/mediumGreen"
            android:textSize="@dimen/_16ssp"
            app:cornerRadius="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_revise_counters" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>