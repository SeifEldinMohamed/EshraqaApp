<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.seif.eshraqaapp.ui.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_splashFragment_to_introFragment"
            app:destination="@id/introFragment" />
    </fragment>
    <fragment
        android:id="@+id/introFragment"
        android:name="com.seif.eshraqaapp.ui.fragments.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/action_introFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.seif.eshraqaapp.ui.fragments.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.seif.eshraqaapp.ui.fragments.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_daysFragment"
            app:destination="@id/daysFragment" />
    </fragment>
    <fragment
        android:id="@+id/azkarFragment"
        android:name="com.seif.eshraqaapp.ui.fragments.AzkarFragment"
        tools:layout="@layout/fragment_azkar" >
        <argument
            android:name="azkar"
            app:argType="com.seif.eshraqaapp.data.models.Azkar" />
        <action
            android:id="@+id/action_azkarFragment_to_daysFragment"
            app:destination="@id/daysFragment"
            app:popUpTo="@id/daysFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/daysFragment"
        android:name="com.seif.eshraqaapp.DaysFragment"
        android:label="جدول الأذكار"
        tools:layout="@layout/fragment_days" >
        <action
            android:id="@+id/action_daysFragment_to_azkarFragment"
            app:destination="@id/azkarFragment"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>